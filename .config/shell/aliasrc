# verbosity and settings that you pretty much just always are going to want
alias \
  cp="cp -iv" \
  mv="mv -iv" \
  rm="rm -Iv" \
  mkd="mkdir -pv"

# spelling is hard...
alias \
  xea="eza --icons" \
  eax="eza --icons" \
  ex="eza --icons"

# more abbreviations
alias \
  ll="eza -l --icons" \
  la="eza -la --icons"

# git stuff
alias g=git \
  gp="git push" \
  gl="git pull"

# use zoxide as cd
alias cd=z

alias clip="xclip -selection clipboard"

# managing dotfiles
alias config='git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'

# weather
alias weather="curl -H \"Accept-Language: da\" wttr.in/Aalborg"

# python
alias venv="python -m venv venv"
alias activate=". ./venv/bin/activate"
