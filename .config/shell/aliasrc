# verbosity and settings that you pretty much just always are going to want
alias \
  cp="cp -iv" \
  mv="mv -iv" \
  rm="rm -Iv" \ 
  mkd="mkdir -pv"

# spelling is hard...
alias \
  exa=eza \
  xea=eza \
  eax=eza \
  ex=eza

# more abbreviations
alias \
  ll="eza -l" \
  la="eza -la"

# git stuff
alias g=git \ 
  gp="git push" \
  gl="git pull"

# use zoxide as cd
alias cd=z

alias clip="xclip -selection clipboard"
alias vimdiff="nvim -d"

# managing dotfiles
alias config='git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'
